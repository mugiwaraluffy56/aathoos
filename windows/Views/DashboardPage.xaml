<Page
  x:Class="aathoos.Views.DashboardPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Background="{StaticResource AppBackgroundBrush}">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="1" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <!-- Section header -->
    <StackPanel Grid.Row="0" Padding="32,32,32,20" Spacing="4">
      <TextBlock
        Text="Dashboard"
        Style="{StaticResource TitleLargeTextBlockStyle}"
        FontWeight="Bold"
        Foreground="{StaticResource AppForegroundBrush}" />
      <TextBlock
        Text="Your day at a glance"
        Style="{StaticResource BodyTextBlockStyle}"
        Foreground="{StaticResource AppMutedBrush}" />
    </StackPanel>

    <!-- Divider -->
    <Border Grid.Row="1" Background="{StaticResource AppBorderBrush}" />

    <!-- Scrollable content -->
    <ScrollViewer Grid.Row="2" Padding="32">
      <StackPanel Spacing="28">

        <!-- Stat cards -->
        <ItemsControl>
          <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <controls:WrapPanel
                xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
                HorizontalSpacing="16"
                VerticalSpacing="16" />
            </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel>

          <!-- Tasks due today -->
          <Border
            Width="200" Padding="20"
            Background="{StaticResource AppSurfaceBrush}"
            BorderBrush="{StaticResource AppBorderBrush}"
            BorderThickness="1" CornerRadius="12">
            <StackPanel Spacing="6">
              <TextBlock Text="0"
                FontSize="34" FontWeight="Bold"
                Foreground="{StaticResource AppForegroundBrush}" />
              <TextBlock Text="Tasks due today"
                Style="{StaticResource BodyTextBlockStyle}"
                Foreground="{StaticResource AppMutedBrush}" />
            </StackPanel>
          </Border>

          <!-- Notes -->
          <Border
            Width="200" Padding="20"
            Background="{StaticResource AppSurfaceBrush}"
            BorderBrush="{StaticResource AppBorderBrush}"
            BorderThickness="1" CornerRadius="12">
            <StackPanel Spacing="6">
              <TextBlock Text="0"
                FontSize="34" FontWeight="Bold"
                Foreground="{StaticResource AppForegroundBrush}" />
              <TextBlock Text="Notes"
                Style="{StaticResource BodyTextBlockStyle}"
                Foreground="{StaticResource AppMutedBrush}" />
            </StackPanel>
          </Border>

          <!-- Goals in progress -->
          <Border
            Width="200" Padding="20"
            Background="{StaticResource AppSurfaceBrush}"
            BorderBrush="{StaticResource AppBorderBrush}"
            BorderThickness="1" CornerRadius="12">
            <StackPanel Spacing="6">
              <TextBlock Text="0"
                FontSize="34" FontWeight="Bold"
                Foreground="{StaticResource AppForegroundBrush}" />
              <TextBlock Text="Goals in progress"
                Style="{StaticResource BodyTextBlockStyle}"
                Foreground="{StaticResource AppMutedBrush}" />
            </StackPanel>
          </Border>

          <!-- Study sessions -->
          <Border
            Width="200" Padding="20"
            Background="{StaticResource AppSurfaceBrush}"
            BorderBrush="{StaticResource AppBorderBrush}"
            BorderThickness="1" CornerRadius="12">
            <StackPanel Spacing="6">
              <TextBlock Text="0"
                FontSize="34" FontWeight="Bold"
                Foreground="{StaticResource AppForegroundBrush}" />
              <TextBlock Text="Study sessions"
                Style="{StaticResource BodyTextBlockStyle}"
                Foreground="{StaticResource AppMutedBrush}" />
            </StackPanel>
          </Border>
        </ItemsControl>

        <!-- Up next -->
        <StackPanel Spacing="12">
          <TextBlock
            Text="Up next"
            Style="{StaticResource SubtitleTextBlockStyle}"
            Foreground="{StaticResource AppForegroundBrush}" />
          <Border
            Padding="20"
            Background="{StaticResource AppSurfaceBrush}"
            BorderBrush="{StaticResource AppBorderBrush}"
            BorderThickness="1" CornerRadius="12">
            <StackPanel Orientation="Horizontal" Spacing="12">
              <FontIcon Glyph="&#xE749;" Foreground="{StaticResource AppMutedBrush}" />
              <TextBlock
                Text="Nothing scheduled yet. Add tasks to get started."
                Style="{StaticResource BodyTextBlockStyle}"
                Foreground="{StaticResource AppMutedBrush}" />
            </StackPanel>
          </Border>
        </StackPanel>

      </StackPanel>
    </ScrollViewer>
  </Grid>
</Page>
