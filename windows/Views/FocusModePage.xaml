<Page
  x:Class="aathoos.Views.FocusModePage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Background="{StaticResource AppBackgroundBrush}">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="1" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <StackPanel Grid.Row="0" Padding="32,32,32,20" Spacing="4">
      <TextBlock Text="Focus Mode"
        Style="{StaticResource TitleLargeTextBlockStyle}" FontWeight="Bold"
        Foreground="{StaticResource AppForegroundBrush}" />
      <TextBlock Text="Minimize distractions"
        Style="{StaticResource BodyTextBlockStyle}"
        Foreground="{StaticResource AppMutedBrush}" />
    </StackPanel>

    <Border Grid.Row="1" Background="{StaticResource AppBorderBrush}" />

    <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12">
      <FontIcon Glyph="&#xE708;" FontSize="40" Foreground="{StaticResource AppAccentBrush}" />
      <TextBlock Text="Coming soon"
        Style="{StaticResource SubtitleTextBlockStyle}"
        Foreground="{StaticResource AppForegroundBrush}"
        HorizontalAlignment="Center" />
      <TextBlock Text="Minimize distractions"
        Style="{StaticResource BodyTextBlockStyle}"
        Foreground="{StaticResource AppMutedBrush}"
        HorizontalAlignment="Center" />
    </StackPanel>
  </Grid>
</Page>
