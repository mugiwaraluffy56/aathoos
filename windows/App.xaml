<Application
  x:Class="aathoos.App"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  RequestedTheme="Dark">

  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
      </ResourceDictionary.MergedDictionaries>

      <!-- Brand palette matching web landing page -->
      <SolidColorBrush x:Key="AppBackgroundBrush"  Color="#1c1a27" />
      <SolidColorBrush x:Key="AppSurfaceBrush"      Color="#23203a" />
      <SolidColorBrush x:Key="AppForegroundBrush"   Color="#dbdcd7" />
      <SolidColorBrush x:Key="AppMutedBrush"        Color="#dbdcd780" />
      <SolidColorBrush x:Key="AppAccentBrush"       Color="#b8235a" />
      <SolidColorBrush x:Key="AppBorderBrush"       Color="#dbdcd714" />

      <!-- Override NavigationView pane to match brand background -->
      <SolidColorBrush x:Key="NavigationViewDefaultPaneBackground"  Color="#23203a" />
      <SolidColorBrush x:Key="NavigationViewExpandedPaneBackground" Color="#23203a" />
      <SolidColorBrush x:Key="NavigationViewContentBackground"      Color="#1c1a27" />
    </ResourceDictionary>
  </Application.Resources>
</Application>
